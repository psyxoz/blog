<!DOCTYPE html>
<html>
<head>
  <title>Admin panel</title>
  <%= stylesheet_link_tag "admin" %>
  <%= javascript_include_tag "admin" %>
  <%= csrf_meta_tags %>
</head>

<body>

  <header class="navbar navbar-default navbar-static-top" role="banner">
    <div class="container">
      <nav role="navigation">
        <%= link_to "Admin panel", root_path, class: "navbar-brand" %>
        <% if current_user %>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li class="active"> <%= link_to "Posts", admin_posts_path %></li>
            </ul>
          </div>
        <% end %>
      </nav>
    </div>
  </header>

  <div class="container">
    <div class="sidebar"></div>
    <div class="content">
      <% flash.each do |name, msg| %>
        <div class="alert alert-<%={error: "error", notice: "success"}[name]%>"> <%= msg %> </div>
      <% end if !flash.empty? %>
      <%= yield %>
    </div>
  </div>

</body>
</html>
