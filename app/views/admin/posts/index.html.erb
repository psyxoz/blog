<%= link_to "Add post", new_admin_post_path, class: 'btn btn-primary pull-right' %>
<h2>Posts</h2>

<div class="block">
  <% if @posts.any? %>
    <table class="zebra-striped table">
      <thead>
        <tr>
          <th>Title</th>
          <th class="medium-big">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td>
              <%= link_to "Edit", edit_admin_post_path(post), class: 'btn btn-mini' %>
              <%= link_to "Delete", admin_post_path(post), confirm: 'Are you sure?', method: :delete, class: 'btn btn-mini btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @posts %>
  <% end %>
</div>
