<%= form_for(Comment.new, url: post_comments_path(post), remote: true) do |f| %>
  <fieldset class="clearfix form-horizontal">
    <div class="control-group">
      <%= f.label :content, 'Comment', class: 'control-label' %>
      <div class="controls">
        <%= f.text_area :content %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit class: 'btn btn-primary', value: 'Add' %>
    </div>
  </fieldset>
<% end %>