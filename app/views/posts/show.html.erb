<h2><%= @post.title %></h2>

<div class="block">
  <% cache("post_#{@post.id}_content") do %>
    <%= markdown(@post.content).html_safe %>
  <% end %>
</div>

<h4>Comments</h4>
<%= render 'comment_form' if current_user.present? %>
<div id="comments">
  <% cache("post_#{@post.id}_comments") do %>
    <% @post.comments.find_each do |comment| %>
      <div>
        <%= comment.content %>
      </div>
    <% end %>
  <% end %>
</div>